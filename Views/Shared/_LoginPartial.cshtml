@using Microsoft.AspNetCore.Identity
@using Cab_Project.Areas.Identity.Data

@inject SignInManager<Cab_ProjectUser> SignInManager
@inject UserManager<Cab_ProjectUser> UserManager

<style>
    .nav-item {
        background-color: #333;
        overflow: hidden;
    }

        /* Style the links inside the navigation bar */
        .nav-item a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

            /* Change the color of links on hover */
            .nav-item a:hover {
                background-color: #ddd;
                color: black;
            }

            /* Add a color to the active/current link */
            .nav-item a.active {
                background-color: #04AA6D;
                color: white;
            }
</style>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        @if (@UserManager.GetUserName(User) == "Ravi@gmail.com" || @UserManager.GetUserName(User) == "Jai@gmail.com" || @UserManager.GetUserName(User) == "kunal@gmail.com")
        {
            <li class="nav-item">
                <a class="nav-link text-primary" asp-area="" asp-controller="Passengers" asp-action="Index">Orders You can accept</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-primary" asp-area="" asp-controller="Driver_Details" asp-action="Index">Your Details</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-primary" asp-area="" asp-controller="Rides_Taken" asp-action="Index">Your Ride is on the way !!</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-primary" asp-area="" asp-controller="Passengers" asp-action="Create">Place your orders</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-primary" asp-area="" asp-controller="Passengers" asp-action="Index">Your Requests</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-primary" asp-area="" asp-controller="Rides_Taken" asp-action="Index">I have reached !!</a>
            </li>



        }
    <li class="nav-item">
            <a id="manage" class="nav-link text-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-primary">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
